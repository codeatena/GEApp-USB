<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/location_margin"
    android:paddingLeft="@dimen/location_margin"
    android:paddingRight="@dimen/location_margin"
    tools:context="com.general.mediaplayer.activity.LocationActivity">

    <EditText
        android:id="@+id/location_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:textSize="@dimen/textsize_30"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/location_savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:text="SAVE"
        android:textSize="@dimen/textsize_30"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/location_edit" />

</RelativeLayout>
